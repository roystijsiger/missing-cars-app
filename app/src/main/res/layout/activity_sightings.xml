<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SightingsActivity"
    android:layout_margin="@dimen/DefaultFragmentMargin">

    <TextView
        android:id="@+id/txt_title_sightings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/sightings_title_placeholder"/>

    <ListView
        android:id="@+id/listview_sightings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_sightings" />

</RelativeLayout>