<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/DefaultFragmentMargin">

    <TextView
        android:id="@+id/txt_profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_title"
        style="@style/TextAppearance.MaterialComponents.Headline5"/>

    <TextView
        android:id="@+id/txt_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_profile_title"
        android:text="@string/profile_email_label_text"
        android:layout_marginEnd="4dp"
        style="@style/TextAppearance.MaterialComponents.Headline6"/>

    <TextView
        android:id="@+id/txt_email_logged_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_email_placeholder"
        android:layout_below="@id/txt_profile_title"
        android:textSize="20sp"
        android:layout_toEndOf="@id/txt_email_label"/>

    <Button
        android:id="@+id/btn_my_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="10sp"
        android:text="@string/my_vehicles_button"
        android:textColor="@color/colorPrimaryForeground"
        android:layout_below="@id/txt_email_label" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout_button_text"
        android:layout_below="@+id/btn_my_vehicles"/>

</RelativeLayout>