<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/txt_profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        style="@style/TextAppearance.MaterialComponents.Headline5"/>

    <TextView
        android:id="@+id/txt_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_profile_title"
        android:text="Email: "
        style="@style/TextAppearance.MaterialComponents.Headline6"/>
    <TextView
        android:id="@+id/txt_email_logged_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roy@example.com"
        android:layout_below="@id/txt_profile_title"
        android:textSize="20sp"
        android:layout_toRightOf="@id/txt_email_label"/>

    <Button
        android:id="@+id/btn_my_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="10sp"
        android:text="My vehicles"
        android:layout_below="@id/txt_email_logged_in"
        />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@android:color/holo_red_dark"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/btn_my_vehicles"/>


</RelativeLayout>